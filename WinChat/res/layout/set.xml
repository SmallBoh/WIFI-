<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/head" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip" >

        <TextView
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像:"
            android:textColor="@color/gray" />

        <FrameLayout
            android:id="@+id/set_icon_parent"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/v2" >

            <ImageView
                android:id="@+id/set_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
        </FrameLayout>

        <Button
            android:id="@+id/set_icon_btn"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/set_icon_parent"
            android:background="@drawable/dialog_pressed_bg"
            android:padding="5dip"
            android:text="选择" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip" >

        <TextView
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="昵称:"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/set_nick_name_edt"
            android:layout_width="180dip"
            android:layout_height="40dip"
            android:layout_toRightOf="@id/v1"
            android:hint="请输入昵称"
            android:maxLength="10"
            android:singleLine="true" />

        <Button
            android:id="@+id/set_nick_name_btn"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/set_nick_name_edt"
            android:background="@drawable/dialog_pressed_bg"
            android:padding="5dip"
            android:text="保存" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip" >

        <TextView
            android:id="@+id/v3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="意见:"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/set_option_edt"
            android:layout_width="180dip"
            android:layout_height="100dip"
            android:layout_toRightOf="@id/v3"
            android:hint="请输入您的意见(没有可不必填写)…" />

        <Button
            android:id="@+id/set_option_btn"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/set_option_edt"
            android:background="@drawable/dialog_pressed_bg"
            android:padding="5dip"
            android:text="提交" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:text="应用设置："
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/wifi_enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="创建热点" />
    </LinearLayout>

    <ListView
        android:id="@+id/set_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_margin="10dp"
        >
    </ListView>

</LinearLayout>